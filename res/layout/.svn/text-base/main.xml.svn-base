<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<TextView android:id="@+id/top_label"
    		android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/from" />
    	<Spinner android:id="@+id/top_lang"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
	</LinearLayout>
	<EditText android:id="@+id/top_edit" 	
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_weight="1"/>
	<LinearLayout android:orientation="horizontal"	
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/bottom_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/to"/>
		<Spinner android:id="@+id/bottom_lang"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
	</LinearLayout>
	<EditText android:id="@+id/bottom_edit" 
		  	android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_weight="1"/>
	<TableLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TableRow>
		<Button android:id="@+id/translate" 
		 	android:text="@string/translate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<View android:layout_height="2dip"
			android:layout_weight="1"
			android:background="#00000000"/>
		<Button android:id="@+id/clear"
			android:text="@string/clear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		</TableRow>
	</TableLayout>
</LinearLayout>
